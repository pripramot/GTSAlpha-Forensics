Sharp.CdcBus.Desc = "SHARP 3G GSM USB Control"
Sharp.Service.Desc = "SHARP 3G GSM USB Control Ver6.0.0"

CustomerDataPath = "SHARP 3G GSM USB Driver"
DriverSet = "SHARP 3G GSM USB Driver Ver6.0.0"
UninstallFile = "SH6Uninstall.exe"
McciOptions = "Uninstallable"


;END ENG - US English Strings

