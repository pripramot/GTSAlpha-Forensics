[version]
signature="$CHICAGO$"
Class=USB
ClassGuid={36FC9E60-c465-11cf-8056-444553540000}
Provider=%Provider%
;DriverVer updated to the minimum required to support the required OSs
;DriverVer=10/31/2005, 4.36.0.2700
DriverVer=04/21/2009, 4.36.0.2700
CatalogFile=sh6bus.cat

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir                  = 11                    ; LDID_SYS
SharpWdm.NT.CopyFiles        = 12                    ; system32\drivers
PropPages.CopyFiles             = 11                    ; system

;-----------------------------------------------------------------------------
; Specify the install disks.  A bit unwieldy during development.
;-----------------------------------------------------------------------------
[SourceDisksNames]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"sh6bus.sys",,

[SourceDisksFiles]
; filename = diskid[, [subdir] [, size]]
sh6bus.sys = 1
sh6whnt.sys = 1

;-----------------------------------------------------------------------------
; Table of Contents:  manufacturer, then devices.
;-----------------------------------------------------------------------------
[Manufacturer]
%SHARP%=SHARP

;-----------------------------------------------------------------------------
; The devices
;-----------------------------------------------------------------------------
[SHARP]
%Sharp.CdcBus.Desc% = SharpWdm.Install, USB\VID_04DD&PID_90F2

;-----------------------------------------------------------------------------
; How to install them:  On W9x, the [section] name is used directly.
; On NT, the system first tries [section.NT], then [section].
;-----------------------------------------------------------------------------

;-----------------------------------------------------------------------------
; Diagnostics Files CopyFiles List Section
;-----------------------------------------------------------------------------
[Sharp.CopyFiles]

;-----------------------------------------------------------------------------
; XXX when we have a property page DLL, add it to the following section.
;-----------------------------------------------------------------------------
[PropPages.CopyFiles]

;-----------------------------------------------------------------------------
;       How to install the WDM driver on NT
;-----------------------------------------------------------------------------
[SharpWdm.Install.NT]
DriverVer=10/31/2005, 4.36.0.2700
CopyFiles       = SharpWdm.NT.CopyFiles
AddReg          = SharpWdm.AddReg, SharpWdm.NT.AddReg

;-----------------------------------------------------------------------------
;       How to start the WDM driver on NT
;-----------------------------------------------------------------------------
[SharpWdm.Install.NT.Services]
AddService      = sh6bus, 2, SharpWdm.AddService

[SharpWdm.AddService]
DisplayName             = %Sharp.Service.Desc%
ServiceType             = 1     ; SERVICE_KERNEL_DRIVER
StartType               = 3     ; SERVICE_DEMAND_START
ErrorControl            = 1     ; SERVICE_ERROR_NORMAL
ServiceBinary           = %12%\sh6bus.sys
LoadOrderGroup          = Base

;-----------------------------------------------------------------------------
;       WDM registry entries (all platforms)
;-----------------------------------------------------------------------------
[SharpWdm.AddReg]

; set the default scenario
HKR,Scenarios,Scenario,0x10001, 00,00,00,00

; // {775FD85F-D873-4006-808A-E08ADE4E9002}
; DEFINE_GUID(GUID_MCCISCENARIO_SERVIL_END_USER_1,
; 0x775fd85f, 0xd873, 0x4006, 0x80, 0x8a, 0xe0, 0x8a, 0xde, 0x4e, 0x90, 0x2);
HKR,Scenarios\Scenario_0\Guids, GUID_SCENARIO_SERVIL_END_USER_1,,  "{775FD85F-D873-4006-808A-E08ADE4E9002}"
HKR,Scenarios\Scenario_0, Description_0409,, "End User"
HKR,Scenarios\Scenario_0\ifc_01,DisableIfc, 0x10001, 01,00,00,00
HKR,Scenarios\Scenario_0\ifc_02,DisableIfc, 0x10001, 01,00,00,00

; // {3DCCF08D-257C-4634-90CC-F4561502020B}
; DEFINE_GUID(GUID_MCCISCENARIO_SERVIL_DEVELOPER_1,
; 0x3dccf08d, 0x257c, 0x4634, 0x90, 0xcc, 0xf4, 0x56, 0x15, 0x2, 0x2, 0xb);
HKR,Scenarios\Scenario_1\Guids, GUID_MCCISCENARIO_SERVIL_DEVELOPER_1,,  "{3DCCF08D-257C-4634-90CC-F4561502020B}"
HKR,Scenarios\Scenario_1, Description_0409,, "Developer"


;-----------------------------------------------------------------------------
;       WDM registry entries (NT only)
;-----------------------------------------------------------------------------
[SharpWdm.NT.AddReg]


;-----------------------------------------------------------------------------
;       The WDM copy list for NT -- different because things go in
;       different places.
;-----------------------------------------------------------------------------
[SharpWdm.NT.CopyFiles]
sh6bus.sys
sh6wh.sys,sh6whnt.sys
sh6whnt.sys


