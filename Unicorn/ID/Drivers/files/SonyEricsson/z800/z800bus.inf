[strings]

;BEGIN ENG - US English Strings
Provider = "Sony Ericsson"
Sony Ericsson = "Sony Ericsson"
DiskString = "Sony Ericsson Z800 Installation disk"

SEMC.CdcBus.Desc = "Sony Ericsson Z800"
SEMC.Service.Desc = "Sony Ericsson Z800 driver (WDM)"

CustomerDataPath = "Sony Ericsson Z800"
DriverSet = "Sony Ericsson Z800 Software"
UninstallFile = "Z800Uninstall.exe"
McciOptions = "Uninstallable"


;END ENG - US English Strings

