[Version]
signature="$CHICAGO$"
Class=USB
ClassGuid={36FC9E60-c465-11cf-8056-444553540000}
Provider=%Provider%
;DriverVer updated to the minimum required to support the required OSs
;DriverVer=07/05/2007,4.40.7.0
DriverVer=04/21/2009,4.40.7.0
;Missing CAT file entry added by RTGL
CatalogFile=ssbcmdmw.cat
;CatalogFile=ssbcmdm.cat


[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
;   Change A:\ to source drive (or omit to always (?) be prompted)
;-----------------------------------------------------------------------------
[SourceDisksNames]
; diskid = description[, [tagfile] [, <unused>, subdir]]
;	having the tagfile non-null seems to help...
1=%DiskString%,"ssbcmdm.sys",,\i386

[SourceDisksFiles]
; filename = diskid[,[ subdir][, size]]
ssbcmdm.sys = 1
ssbccr.sys = 1
ssbcvcr.vxd = 1
ssbccm95.sys = 1
ssbccmnt.sys = 1
ssbccomm.vxd = 1
ssbcvcd.vxd = 1

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir          = 11                    ; LDID_SYS

;-----------------------------------------------------------------------------
; Table of Contents
;-----------------------------------------------------------------------------
[Manufacturer]
%Samsung%=Samsung

;-----------------------------------------------------------------------------
; Device-by-device entries
;-----------------------------------------------------------------------------
[Samsung]
%Samsung.Modem.Desc% = Samsung.Install, USB\VID_04E8&PID_6704&Class_02&SubClass_02&Prot_01&OS_9X

;-----------------------------------------------------------------------------
; Installation instructions
;-----------------------------------------------------------------------------

[Samsung.Install]
;AddReg		= Samsung.AddReg,Samsung.W95.AddReg,Samsung.W95.AddReg.CRGuid
AddReg		= Samsung.AddReg
;CopyFiles	= CopyFiles, CopyFiles.W95, CopyFiles.sys, CopyFiles.W95.sys
CopyFiles	= CopyFiles, CopyFiles.sys

;-----------------------------------------------------------------------------
;  Registry
;-----------------------------------------------------------------------------

; common registry entries 
[Samsung.AddReg]
HKR,,NTMPDriver,,ssbcmdm.sys
HKR,,CRUpperDescription,,%UpperDescription%
HKR,,EnableSetClearFeatureIdle, 0x10001, 01,00,00,00
HKR,,OverrideDefaultPortSettings, 0x10001, 01,00,00,00
HKR,,InitialBaudRate, 0x10001, 00,C2,01,00			;115200 initial baud rate
HKR,,InitialLineControl,, "8N1"					;8-bits, No parity, 1 stop bit

; only for Win95....
;[Samsung.W95.AddReg]
;HKR,,DevLoader,,*ntkern

;[Samsung.W95.Addreg.CRGuid]
;HKR,,CRGuid,,{7F4C6FC5-E92D-4541-9A77-B1F60812369C}

;-----------------------------------------------------------------------------
;  Copy lists
;-----------------------------------------------------------------------------
[CopyFiles]

;[CopyFiles.W95]; RTGL: Remove legacy OS sections
;ssbcvcr.vxd
;ssbccomm.vxd
;ssbcvcd.vxd
;
[CopyFiles.sys]
ssbcmdm.sys
ssbccr.sys

;[CopyFiles.W95.sys]; RTGL: Remove legacy OS sections
;ssbccm.sys,ssbccm95.sys
;ssbccm95.sys
;ssbccmnt.sys
;
;[Copyfiles.W95.inf]



;-----------------------------------------------------------------------------
; STRINGS
;-----------------------------------------------------------------------------
[Strings]

;BEGIN ENG - US English Strings
Provider = "Samsung Electronics Co., LTD"
Samsung = "Samsung Electronics Co., LTD"
DiskString = "SAMSUNG Mobile USB Modem 1.0 Installation Disk"

Samsung.Modem.Desc = "SAMSUNG Mobile USB Modem 1.0"
UpperDescription = "SAMSUNG Mobile USB Modem 1.0 (VCOMM)"

CustomerDataPath = "SAMSUNG Mobile Composite Device"
DriverSet = "SAMSUNG Mobile Composite Device Software"
UninstallFile = "SSBCUninstall.exe"
McciOptions = "Uninstallable NotInstallOnWinVer5"


;END ENG - US English Strings


