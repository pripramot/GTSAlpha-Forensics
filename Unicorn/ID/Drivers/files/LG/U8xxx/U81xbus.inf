LGEU8110.Service.Desc = "LGE U8110 driver (WDM)"

CustomerDataPath = "LGE U8110 Kit"
DriverSet = "LGE U8110 Software"
UninstallFile = "U81XUninstall.exe"
McciOptions = "Uninstallable"


;END ENG - US English Strings

