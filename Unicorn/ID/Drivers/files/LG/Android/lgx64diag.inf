
;*****************************************************************************
; Name:  lgx64diag.inf
;*****************************************************************************

[Version]
signature    = "$WINDOWS NT$"
Class        = Ports
ClassGuid    = {4D36E978-E325-11CE-BFC1-08002BE10318}
Provider     = %Provider%
DriverVer    = 11/19/2014,5.2.0.0
CatalogFile  = lgdriver64.cat

[ControlFlags]
ExcludeFromSelect = *

[SourceDisksNames]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"lgx64diag.sys",,

[SourceDisksFiles]
; filename = diskid[,[ subdir][, size]]
lgx64diag.sys = 1


;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------

[DestinationDirs]
DefaultDestDir  = 12             	; system32\drivers
CopyFiles       = 12                ; system32\drivers
CopyFiles.Win2K = 12                ;

;-----------------------------------------------------------------------------
; Table of Contents
;-----------------------------------------------------------------------------
[Manufacturer]
%LGSI%=LGSI,NTamd64

;-----------------------------------------------------------------------------
; Device-by-device entries
;-----------------------------------------------------------------------------
[LGSI.NTamd64]
; For individual driver
%Lgsi.Comm.Desc% = LGSI.Install, USB\VID_1004&PID_6000_DIAGInterface

;-----------------------------------------------------------------------------
; Installation instructions
;-----------------------------------------------------------------------------

[Lgsi.Install.nt]
AddReg		= Lgsi.AddReg,Lgsi.NT.AddReg
CopyFiles	= CopyFiles, CopyFiles.Win2K

;-----------------------------------------------------------------------------
;  Registry
;-----------------------------------------------------------------------------

; common registry entries 
[Lgsi.AddReg]
HKR,,NTMPDriver,,lgx64diag.sys

; only for NT...
[Lgsi.NT.AddReg]
HKR,,PortSubClass,1,01
HKR,,EnumPropPages32,,"MsPorts.dll,SerialPortPropPageProvider"

;-----------------------------------------------------------------------------
;  Copy lists
;-----------------------------------------------------------------------------
[CopyFiles]

[CopyFiles.Win2K]
lgx64diag.sys

;-----------------------------------------------------------------------------
;  NT Services installation
;-----------------------------------------------------------------------------
[Lgsi.Install.NT.Services]
AddService = UsbDiag, 0x00000002, Lgsi.Install.AddService

[Lgsi.Install.AddService]
DisplayName	= %Lgsi.Service.Name%
Description	= %Lgsi.Service.Desc%
ServiceType	= 1			;%SERVICE_KERNEL_DRIVER%
StartType	= 3			;%SERVICE_DEMAND_START%
ErrorControl	= 1			;%SERVICE_ERROR_NORMAL%	
ServiceBinary	= %12%\lgx64diag.sys

;-----------------------------------------------------------------------------
; STRINGS
;-----------------------------------------------------------------------------
[Strings]

Provider          = "LG Electronics Inc."
Lgsi              = "LG Electronics Inc."
DiskString        = "LGE USB Serial Port Drivers installation disk"
Lgsi.Comm.Desc    = "LGE Mobile USB Serial Port"
Lgsi.Service.Name = "LGE Mobile USB Serial Port"
Lgsi.Service.Desc = "LGE Mobile USB Serial Port"
CustomerDataPath  = "LGE USB Mobile Diagnostic Kit"
DriverSet         = "LGE USB Mobile Modem Software"

