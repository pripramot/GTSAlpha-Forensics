
;*****************************************************************************
; Name:  lgx64gps.inf (_MOON_)
;*****************************************************************************

[Version]
signature    = "$WINDOWS NT$"
Class        = Ports
ClassGuid    = {4D36E978-E325-11CE-BFC1-08002BE10318}
Provider     = %Provider%
DriverVer    = 11/19/2014,5.2.0.0
CatalogFile  = lgdriver64.cat

[ControlFlags]
ExcludeFromSelect = *

[SourceDisksNames]
1=%DiskString%,"lgx64gps.sys",,

[SourceDisksFiles]
lgx64gps.sys = 1

[DestinationDirs]
DefaultDestDir  = 12             	; system32\drivers
CopyFiles       = 12                ; system32\drivers
CopyFiles.Win2K = 12                ;

[Manufacturer]
%LGSI%=LGSI,NTamd64

;-----------------------------------------------------------------------------
; Device-by-device entries
;-----------------------------------------------------------------------------
[LGSI.NTamd64]
; For individual driver
%Lgsi.Comm.Desc% = LGSI.Install, USB\VID_1004&PID_6000_GPSInterface

;-----------------------------------------------------------------------------
; Installation instructions
;-----------------------------------------------------------------------------

[Lgsi.Install.nt]
AddReg		= Lgsi.AddReg,Lgsi.NT.AddReg
CopyFiles	= CopyFiles, CopyFiles.Win2K

;-----------------------------------------------------------------------------
;  Registry
;-----------------------------------------------------------------------------

; common registry entries 
[Lgsi.AddReg]
HKR,,NTMPDriver,,lgx64gps.sys

; only for NT...
[Lgsi.NT.AddReg]
HKR,,PortSubClass,1,01
HKR,,EnumPropPages32,,"MsPorts.dll,SerialPortPropPageProvider"

;-----------------------------------------------------------------------------
;  Copy lists
;-----------------------------------------------------------------------------
[CopyFiles]

[CopyFiles.Win2K]
lgx64gps.sys

;-----------------------------------------------------------------------------
;  NT Services installation
;-----------------------------------------------------------------------------
[Lgsi.Install.NT.Services]
AddService = UsbGps, 0x00000002, Lgsi.Install.AddService

[Lgsi.Install.AddService]
DisplayName	= %Lgsi.Service.Name%
Description	= %Lgsi.Service.Desc%
ServiceType	= 1			;%SERVICE_KERNEL_DRIVER%
StartType	= 3			;%SERVICE_DEMAND_START%
ErrorControl	= 1			;%SERVICE_ERROR_NORMAL%	
ServiceBinary	= %12%\lgx64gps.sys

;-----------------------------------------------------------------------------
; STRINGS
;-----------------------------------------------------------------------------
[Strings]

Provider = "LG Electronics Inc."
Lgsi = "LG Electronics Inc."

DiskString        = "LGE USB GPS NMEA Port Drivers installation disk"
Lgsi.Comm.Desc    = "LGE Mobile USB GPS NMEA Port"
Lgsi.Service.Name = "LGE Mobile USB GPS NMEA Port"
Lgsi.Service.Desc = "LGE Mobile USB GPS NMEA Port"
