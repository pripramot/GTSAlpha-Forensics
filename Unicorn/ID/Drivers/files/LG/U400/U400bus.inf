[version]
signature="$CHICAGO$"
Class=USB
ClassGuid={36FC9E60-c465-11cf-8056-444553540000}
Provider=%Provider%
;DriverVer updated to the minimum required to support the required OSs
;DriverVer=04/05/2006, 4.34.0.2705
DriverVer=04/21/2009, 4.34.0.2705
CatalogFile=U400bus.cat

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir                  = 11                    ; LDID_SYS
LGEU400Wdm.W95.CopyFiles       = 11                    ; LDID_SYS
LGEU400Wdm.NT.CopyFiles        = 12                    ; system32\drivers
PropPages.CopyFiles             = 11                    ; system

;-----------------------------------------------------------------------------
; Specify the install disks.  A bit unwieldy during development.
;-----------------------------------------------------------------------------
[SourceDisksNames]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"U400bus.sys",,

[SourceDisksFiles]
; filename = diskid[, [subdir] [, size]]
U400bus.sys = 1
;U400wh95.sys = 1; RTGL: remove unused files from legacy OS versions
U400whnt.sys = 1

;-----------------------------------------------------------------------------
; Table of Contents:  manufacturer, then devices.
;-----------------------------------------------------------------------------
[Manufacturer]
%LGE%=LGEU400

;-----------------------------------------------------------------------------
; The devices 
;-----------------------------------------------------------------------------
[LGEU400]
%LGEU400.CdcBus.Desc% = LGEU400Wdm.Install, USB\VID_1004&PID_6024

;-----------------------------------------------------------------------------
; How to install them:  On W9x, the [section] name is used directly.
; On NT, the system first tries [section.NT], then [section].
;-----------------------------------------------------------------------------

;-----------------------------------------------------------------------------
; Diagnostics Files CopyFiles List Section
;-----------------------------------------------------------------------------
[LGEU400.CopyFiles]

;-----------------------------------------------------------------------------
; XXX when we have a property page DLL, add it to the following section.
;-----------------------------------------------------------------------------
[PropPages.CopyFiles]

;-----------------------------------------------------------------------------
;       How to install the WDM driver on W95/W98
;-----------------------------------------------------------------------------
[LGEU400Wdm.Install]
DriverVer=04/05/2006, 4.34.0.2705
CopyFiles       = LGEU400Wdm.W95.CopyFiles,LGEU400.CopyFiles, PropPages.CopyFiles
AddReg          = LGEU400Wdm.AddReg, LGEU400Wdm.W95.AddReg

;-----------------------------------------------------------------------------
;       How to install the WDM driver on NT
;-----------------------------------------------------------------------------
[LGEU400Wdm.Install.NT]
DriverVer=04/05/2006, 4.34.0.2705
CopyFiles       = LGEU400Wdm.NT.CopyFiles
AddReg          = LGEU400Wdm.AddReg, LGEU400Wdm.NT.AddReg

;-----------------------------------------------------------------------------
;       How to start the WDM driver on NT
;-----------------------------------------------------------------------------
[LGEU400Wdm.Install.NT.Services]
AddService      = U400bus, 2, LGEU400Wdm.AddService

[LGEU400Wdm.AddService]
DisplayName             = %LGEU400.Service.Desc%
ServiceType             = 1     ; SERVICE_KERNEL_DRIVER
StartType               = 3     ; SERVICE_DEMAND_START
ErrorControl            = 1     ; SERVICE_ERROR_NORMAL
ServiceBinary           = %12%\U400bus.sys
LoadOrderGroup          = Base

;-----------------------------------------------------------------------------
;       WDM registry entries (all platforms)
;-----------------------------------------------------------------------------
[LGEU400Wdm.AddReg]


;-----------------------------------------------------------------------------
;       WDM registry entries (W95/98) (including how to start the driver)
;-----------------------------------------------------------------------------
[LGEU400Wdm.W95.AddReg]
HKR,,DevLoader,,*ntkern
HKR,,NTMPDriver,,U400bus.sys

;-----------------------------------------------------------------------------
;       WDM registry entries (NT only)
;-----------------------------------------------------------------------------
[LGEU400Wdm.NT.AddReg]

;-----------------------------------------------------------------------------
;       The WDM copy list for Win95 -- different because things go in
;       different places.  Also, we probably need to rename drivers 
;       during the install.
;-----------------------------------------------------------------------------
[LGEU400Wdm.W95.CopyFiles]
U400bus.sys
;U400wh.sys,U400wh95.sys; RTGL: remove unused files from legacy OS versions
;U400wh95.sys; RTGL: remove unused files from legacy OS versions
U400whnt.sys

;-----------------------------------------------------------------------------
;       The WDM copy list for NT -- different because things go in
;       different places.
;-----------------------------------------------------------------------------
[LGEU400Wdm.NT.CopyFiles]
U400bus.sys
U400wh.sys,U400whnt.sys
U400whnt.sys


;****************************************************************************
; Localizable Strings
;****************************************************************************
[strings]

;BEGIN ENG - US English Strings
Provider = "LG Electronics"
LGE = "LG Electronics"
DiskString = "LGE U400 Installation disk"

LGEU400.CdcBus.Desc = "LGE U400"
LGEU400.Service.Desc = "LGE U400 driver (WDM)"

CustomerDataPath = "LG Electronics U400"
DriverSet = "LG Electronics U400 Software"
UninstallFile = "U400Uninstall.exe"
McciOptions = "Uninstallable"


;END ENG - US English Strings

