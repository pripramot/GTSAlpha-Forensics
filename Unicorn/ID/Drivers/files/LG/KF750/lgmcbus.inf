[version]
signature="$WINDOWS NT$"
Class=USB
ClassGuid={36FC9E60-c465-11cf-8056-444553540000}
Provider=%Provider%
;DriverVer updated to the minimum required to support the required OSs
;DriverVer=01/09/2008,4.42.0.0
DriverVer=04/21/2009,4.42.0.0
CatalogFile=lgmcbus.cat

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------
; Specify target paths...
;-----------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir                  = 11                    ; LDID_SYS
LGEMobileWdm.W95.CopyFiles       = 11                    ; LDID_SYS
LGEMobileWdm.NT.CopyFiles        = 12                    ; system32\drivers
PropPages.CopyFiles             = 11                    ; system

;-----------------------------------------------------------------------------
; Specify the install disks.  A bit unwieldy during development.
;-----------------------------------------------------------------------------
[SourceDisksNames.x86]
; diskid = description[, [tagfile] [, <unused>, subdir]]
1=%DiskString%,"lgmcbus.sys",,\i386


; RTL Mods - remove references to 64 bit drivers since 64 bit files not present
;[SourceDisksNames.amd64]
; diskid = description[, [tagfile] [, <unused>, subdir]]
;1=%DiskString%,"lgmcbus.sys",,\amd64



[SourceDisksFiles]
; filename = diskid[, [subdir] [, size]]
lgmcbus.sys = 1
lgmcwh95.sys = 1
lgmcwhnt.sys = 1

;-----------------------------------------------------------------------------
; Table of Contents:  manufacturer, then devices.
;-----------------------------------------------------------------------------
[Manufacturer]
;%LGE%=LGEMobile, NTamd64
%LGE%=LGEMobile

;-----------------------------------------------------------------------------
; The devices
;-----------------------------------------------------------------------------
[LGEMobile]
%LGEMobile.CdcBus.Desc% = LGEMobileWdm.Install, USB\VID_1004&PID_6073

;[LGEMobile.NTamd64]
;%LGEMobile.CdcBus.Desc% = LGEMobileWdm.Install, USB\VID_1004&PID_6073

;-----------------------------------------------------------------------------
; How to install them:  On W9x, the [section] name is used directly.
; On NT, the system first tries [section.NT], then [section].
;-----------------------------------------------------------------------------

;-----------------------------------------------------------------------------
; Diagnostics Files CopyFiles List Section
;-----------------------------------------------------------------------------
[LGEMobile.CopyFiles]

;-----------------------------------------------------------------------------
; XXX when we have a property page DLL, add it to the following section.
;-----------------------------------------------------------------------------
[PropPages.CopyFiles]

;-----------------------------------------------------------------------------
;       How to install the WDM driver on W95/W98
;-----------------------------------------------------------------------------
[LGEMobileWdm.Install]
CopyFiles       = LGEMobileWdm.W95.CopyFiles, LGEMobile.CopyFiles, PropPages.CopyFiles
AddReg          = LGEMobileWdm.AddReg, LGEMobileWdm.W95.AddReg

;-----------------------------------------------------------------------------
;       How to install the WDM driver on NT
;-----------------------------------------------------------------------------
[LGEMobileWdm.Install.NT]
CopyFiles       = LGEMobileWdm.NT.CopyFiles
AddReg          = LGEMobileWdm.AddReg, LGEMobileWdm.NT.AddReg

;-----------------------------------------------------------------------------
;       How to start the WDM driver on NT
;-----------------------------------------------------------------------------
[LGEMobileWdm.Install.NT.Services]
AddService      = lgmcbus, 2, LGEMobileWdm.AddService

[LGEMobileWdm.AddService]
DisplayName             = %LGEMobile.Service.Desc%
ServiceType             = 1     ; SERVICE_KERNEL_DRIVER
StartType               = 3     ; SERVICE_DEMAND_START
ErrorControl            = 1     ; SERVICE_ERROR_NORMAL
ServiceBinary           = %12%\lgmcbus.sys
LoadOrderGroup          = Base

;-----------------------------------------------------------------------------
;       WDM registry entries (all platforms)
;-----------------------------------------------------------------------------
[LGEMobileWdm.AddReg]


;-----------------------------------------------------------------------------
;       WDM registry entries (W95/98) (including how to start the driver)
;-----------------------------------------------------------------------------
[LGEMobileWdm.W95.AddReg]
HKR,,DevLoader,,*ntkern
HKR,,NTMPDriver,,lgmcbus.sys

;-----------------------------------------------------------------------------
;       WDM registry entries (NT only)
;-----------------------------------------------------------------------------
[LGEMobileWdm.NT.AddReg]

;-----------------------------------------------------------------------------
;       The WDM copy list for Win95 -- different because things go in
;       different places.  Also, we probably need to rename drivers 
;       during the install.
;-----------------------------------------------------------------------------
[LGEMobileWdm.W95.CopyFiles]
lgmcbus.sys
lgmcwh.sys,lgmcwh95.sys
lgmcwh95.sys
lgmcwhnt.sys

;-----------------------------------------------------------------------------
;       The WDM copy list for NT -- different because things go in
;       different places.
;-----------------------------------------------------------------------------
[LGEMobileWdm.NT.CopyFiles]
lgmcbus.sys
lgmcwh.sys,lgmcwhnt.sys
lgmcwhnt.sys


